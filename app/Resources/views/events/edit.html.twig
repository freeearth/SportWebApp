{% extends 'base.html.twig' %}
{% block title %}{{ title_l }}{% endblock %}
{% block body %}
    <div class="container"> 
        <div class="home">
            <div class="container">  
                <div class="s01">
                    <div class="inner-form">
                        {{ form_start(form) }}
                        {{ form_row(form.evName) }}
                        <br/>
                        {{ form_row(form.evDescription) }}
                        <br/>
                        {{ form_row(form.evLocation) }}
                        <br/>
                        {{ form_row(form.evPlannedDatetime) }}
                        <br/>
                        <button type="submit">{{submit_name}}</button>
                        {{ form_end(form) }}
                        {{ form_errors(form) }}
                        <ul>
                            <li>
                                <a href="{{ path('events_index') }}">Back to the list</a>
                            </li>
                        </ul>
                    </div>  
                </div>
            </div>
        </div>
    </div>
{% endblock %}
